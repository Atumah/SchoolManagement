{
  "name": "schoolmanagement/php-docker-starter",
  "description": "SchoolManagement PHP 8.2 application with Docker, MariaDB, linting, and quality checks.",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.58",
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "check": [
      "composer validate --strict"
    ],
    "lint-fix": [
      "php-cs-fixer fix --config=.php-cs-fixer.dist.php"
    ]
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
